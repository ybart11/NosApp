<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="2dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true"
    android:id="@+id/cardv">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/linear_layout"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textShowName2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Show Name"
            android:textColor="@android:color/black"
            android:textSize="22sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/expandable_layout"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            >

            <TextView
                android:id="@+id/textChannel2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="Channel:"
                android:textColor="@color/black"
                android:textSize="18dp" />
            <TextView
                android:id="@+id/editChannel2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/textChannel2"
                android:padding="16dp"
                android:text="text"
                android:textColor="@color/black"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/textStartDate2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="Start Date:"
                android:textColor="@color/black"
                android:layout_below="@id/textChannel2"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/editStartDate2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/editChannel2"
                android:layout_marginLeft="0dp"
                android:layout_toRightOf="@id/textStartDate2"
                android:padding="16dp"
                android:text="text"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textEndDate2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="Start Date:"
                android:textColor="@color/black"
                android:layout_below="@id/textStartDate2"
                android:textSize="18dp" />
            <TextView
                android:id="@+id/editEndDate2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/editStartDate2"
                android:padding="16dp"
                android:layout_toRightOf="@id/textStartDate2"
                android:text="text"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textSeason2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="Seasons:"
                android:textColor="@color/black"
                android:layout_below="@id/textEndDate2"
                android:textSize="18dp" />
            <TextView
                android:id="@+id/editSeasons2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/editEndDate2"
                android:padding="16dp"
                android:text="text"
                android:layout_toRightOf="@id/textSeason2"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textEpisode2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="Episodes:"
                android:textColor="@color/black"
                android:layout_below="@id/textSeason2"
                android:textSize="18dp" />
            <TextView
                android:id="@+id/editEpisode2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/editSeasons2"
                android:padding="16dp"
                android:text="text"
                android:layout_toRightOf="@id/textEpisode2"
                android:textColor="@color/black"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/textSynopsis2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="Synopsis:"
                android:textColor="@color/black"
                android:layout_below="@id/textEpisode2"
                android:textSize="18dp" />
            <TextView
                android:id="@+id/editSynopsis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/editEpisode2"
                android:padding="16dp"
                android:layout_toRightOf="@id/textSynopsis2"
                android:text="text"
                android:textColor="@color/black"
                android:textSize="18sp" />

        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>